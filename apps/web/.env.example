# D14: Environment Variables for Web App
#
# Copy this file to .env and fill in the values
# Variables must start with VITE_ to be exposed to the app

# API endpoint (if using backend services)
# VITE_API_URL=https://api.example.com

# Analytics (optional)
# VITE_ANALYTICS_ID=

# Feature flags
VITE_ENABLE_PDF_SIGNING=false
VITE_ENABLE_OCR=false
VITE_ENABLE_CLOUD_STORAGE=false

# Storage limits (in bytes)
VITE_MAX_FILE_SIZE=52428800
VITE_MAX_STORAGE_SIZE=524288000
